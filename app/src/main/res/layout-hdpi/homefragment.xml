<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    tool:context=".HomeFragment"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/VehiclesStatus"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:text="@string/vehiclesStatus"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Vehicles"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_marginTop="18dp"
        android:text="@string/vehicles"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:background="@drawable/shape"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/VehiclesStatus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/VehiclesStatus"
        app:layout_constraintTop_toBottomOf="@+id/VehiclesStatus"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/vehiclesDiagnoses"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:text="@string/vehiclesDiagnos"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/Vehicles"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Vehicles"
            app:layout_constraintTop_toBottomOf="@+id/Vehicles" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Employees"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:textColor="@color/white"
            android:text="@string/Employees"
            android:textSize="40sp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/vehiclesDiagnoses"
            app:layout_constraintStart_toStartOf="@+id/vehiclesDiagnoses"
            app:layout_constraintTop_toBottomOf="@+id/vehiclesDiagnoses" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Reports"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:textColor="@color/white"
            android:text="@string/Reports"
            android:textSize="40sp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/Employees"
            app:layout_constraintStart_toStartOf="@+id/Employees"
            app:layout_constraintTop_toBottomOf="@+id/Employees" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/DashBoard"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:textColor="@color/white"
        android:text="@string/DashBoard"
        android:textSize="40sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/Reports"
        app:layout_constraintStart_toStartOf="@+id/Reports"
        app:layout_constraintTop_toBottomOf="@+id/Reports" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>